{
	"name": "hearts-of-iron-4-focus-trees-inverter",
	"version": "0.0.0",
	"description": "CLI tool for inverting focus trees in Hearts of Iron 4",
	"private": false,
	"main": "./dist/src/main.js",
	"scripts": {
		"start": "node ./dist/src/main.js",
		"test": "vitest --run --passWithNoTests --coverage",
		"compile": "tsc",
		"dev": "ts-node-esm ./src/main.ts",
		"dev:watch": "nodemon --watch ./src --exec ts-node-esm ./src/main.ts",
		"vitest:check": "vitest --run --passWithNoTests --coverage",
		"vitest:check:watch": "vitest --watch --passWithNoTests --coverage",
		"prettier:fix": "prettier --write .",
		"prettier:check": "prettier --check .",
		"eslint:fix": "eslint --fix .",
		"eslint:check": "eslint --max-warnings 0 .",
		"typescript:check": "tsc --noEmit",
		"npm-audit:check": "npm audit --audit-level=low",
		"formatting:fix": "prettier --write .",
		"formatting:check": "prettier --check .",
		"compile:check": "tsc --noEmit",
		"release": "release-it",
		"hadolint:check": "hadolint Dockerfile"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Rafal-Majewski/hearts-of-iron-4-focus-trees-inverter.git"
	},
	"author": "Rafa≈Ç Majewski",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/Rafal-Majewski/hearts-of-iron-4-focus-trees-inverter/issues"
	},
	"homepage": "https://github.com/Rafal-Majewski/hearts-of-iron-4-focus-trees-inverter#readme",
	"devDependencies": {
		"@types/node": "^20.4.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^5.61.0",
		"@vitest/coverage-c8": "^0.33.0",
		"eslint": "^8.44.0",
		"nodemon": "^2.0.22",
		"prettier": "^3.0.0",
		"release-it": "^16.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6",
		"vitest": "^0.33.0"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "^16.3.1",
		"jomini": "^0.9.0",
		"zod": "^3.21.4"
	}
}
